@page
@model QuaLuuNiem.Pages.Login.DangkyModel

@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5 shadow-lg border-0 card-login">
                <div class="card-header text-center bg-dark text-white">
                    <h2>Đăng ký</h2>
                </div>
                <div class="card-body p-5" style="background-color: white">
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <b><label asp-for="ThongTinKhachHang.HoTen" class="form-label"></label></b>
                            <input asp-for="ThongTinKhachHang.HoTen" class="form-control" placeholder="Họ tên" />
                            <span asp-validation-for="ThongTinKhachHang.HoTen" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <b><label asp-for="ThongTinKhachHang.DiaChi" class="form-label"></label></b>
                            <input asp-for="ThongTinKhachHang.DiaChi" class="form-control" placeholder="Địa chỉ" />
                            <span asp-validation-for="ThongTinKhachHang.DiaChi" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <b><label asp-for="ThongTinKhachHang.SDT" class="form-label"></label></b>
                            <input asp-for="ThongTinKhachHang.SDT" class="form-control" placeholder="Số điện thoại" />
                            <span asp-validation-for="ThongTinKhachHang.SDT" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <b><label asp-for="ThongTinKhachHang.TenDangNhap" class="form-label"></label></b>
                            <input asp-for="ThongTinKhachHang.TenDangNhap" class="form-control" placeholder="Tên đăng nhập" />
                            <span asp-validation-for="ThongTinKhachHang.TenDangNhap" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <b><label asp-for="ThongTinKhachHang.MatKhau" class="form-label"></label></b>
                            <input asp-for="ThongTinKhachHang.MatKhau" type="password" class="form-control" placeholder="Mật khẩu" />
                            <span asp-validation-for="ThongTinKhachHang.MatKhau" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-dark w-100">Đăng ký</button>
                        <a asp-page="/Login/Dangnhap" class="text-decoration-none text-dark text-center">Quay lại</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
