<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuaLuuNiem.com</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuaLuuNiem.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">QuaLuuNiem.com</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/SanPhams/Index">Sản Phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/GioHangs/Index">Giỏ Hàng</a>
                        </li>
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">@Context.Session.GetString("UserName")</a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" asp-area="" asp-page="/HoaDons/DSHoaDon">Xem Hóa Đơn</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Login/DoiMatKhau">Đổi Mật Khẩu</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Login/Logout">Đăng Xuất</a></li>
                                    @if (Context.Session.GetString("IsAdmin") == "true")
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-page="/Admin/QuanLyThongTinKhachHang">Thay Đổi Thông Tin</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-page="/Admin/QuanLySanPham">Quản Lý Sản Phẩm</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-page="/ThongKeDoanhThus/Index">Thống Kê Doanh Thu</a></li>
                                    }
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-white dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Chức Năng</a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Login/Dangnhap">Đăng Nhập</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Login/Dangky">Đăng Ký</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - QuaLuuNiem - <a asp-area="" asp-page="/Privacy">Chính sách bảo mật</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
