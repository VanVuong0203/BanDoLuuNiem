@page
@model QuaLuuNiem.Pages.HoaDons.DSHoaDonModel

@{
    ViewData["Title"] = "Danh sách Hóa Đơn";
}
<body>
<h1>Danh Sách Hóa Đơn</h1>

@if (Model.HoaDon != null && Model.HoaDon.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Mã Hóa Đơn</th>
                <th>Ngày Bán</th>
                <th>Tổng Tiền</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.HoaDon)
            {
                <tr>
                    <td>@item.MaHD</td>
                    <td>@item.NgayBan.ToString("dd/MM/yyyy")</td>
                    <td>@item.TongTien.ToString("C")</td>
                    <td>
                            <a class="btn btn-primary" asp-page="./Details" asp-page-handler="Details" asp-route-id="@item.MaHD">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có hóa đơn nào.</p>
    }
</body>

